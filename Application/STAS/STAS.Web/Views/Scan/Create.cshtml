@model STAS.Web.Models.ScanAddEditVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create New Scan</h1>
<h3>@Model.EmployeeName</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="scan.EmployeeId" class="form-control" type="hidden"/>
            <div class="form-group">
                <label asp-for="scan.ScanDate" class="control-label"></label>
                <input asp-for="scan.ScanDate" class="form-control" />
                <span asp-validation-for="scan.ScanDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="scan.ScanType" class="control-label"></label>
                <select asp-for="scan.ScanType" asp-items="Model.ScanTypesList" class="form-select">
                    <option>---Select Type---</option>
                </select>
                <span asp-validation-for="scan.ScanType" class="text-danger"></span>
            </div>
            <div class="form-group pt-4">
                <input type="submit" value="Create" class="btn btn-primary" />
                @Html.ActionLink("Back", "Details", "Employee", new { id = Model.scan.EmployeeId }, new { @class = "btn btn-info" })
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
